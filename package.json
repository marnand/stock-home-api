{
  "name": "stockhome-api",
  "version": "1.0.0",
  "description": "API backend para StockHome com Bun e Supabase",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --format esm",
    "build:vercel": "echo 'Build completed'",
    "start": "bun src/index.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.1",
    "@supabase/supabase-js": "^2.38.0",
    "elysia": "^1.4.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.10.0",
    "@vercel/node": "^3.0.0",
    "typescript": "^5.3.0"
  }
}